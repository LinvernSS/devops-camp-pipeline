pipeline {
    agent {
        label 'jenkins-agent'
    }
    environment {
	PIPELINE_HASH = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
	HARBOR_REGISTRY = 'harbor.dev.afsmtddso.com'
	HARBOR_REPOSITORY = jxu-devsecops
	APP_IMAGE_NAME = 'lab'
	DB_IMAGE_NAME = 'db'
    }
    stages {
        stage('Application repository') {
            steps {
                echo "Cloning application repository"
                sh 'git clone https://github.com/linvernSS/afs-labs.git'
		dir('afs-labs') {
			script{
				env.APP_HASH = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
			}
		}
            }
        }
        stage('Application docker build') {
            steps {
                echo "Building application image"
		withCredentials([usernameColonPassword(credentialsId: 'jxu-harbor-auth', variable: 'HARBOR-AUTH')]) {
			script {
				docker.build('$APP_IMAGE_NAME', '-f ./app/Dockerfile ./afs-labs')
				docker.withRegistry('https://$HARBOR_REGISTRY', 'jxu-harbor-auth') {
					sh 'docker tag $APP_IMAGE_NAME $HARBOR_REGISTRY/$HARBOR_REPOSITORY/$APP_IMAGE_NAME:$APP_HASH-$PIPELINE_HASH'
					sh 'docker push $HARBOR_REGISTRY/$HARBOR_REPOSITORY/$APP_IMAGE_NAME:$APP_HASH-$PIPELINE_HASH'
				}
			}
		}

            }
        }
   	stage('Database docker build') {
            steps {
                echo "Building database image"
            	 withCredentials([usernameColonPassword(credentialsId: 'jxu-harbor-auth', variable: 'HARBOR-AUTH')]) {
                        script {
                                docker.build('$DB_IMAGE_NAME', '-f ./db/Dockerfile ./afs-labs')
                                docker.withRegistry('https://$HARBOR_REGISTRY', 'jxu-harbor-auth') {
                                        sh 'docker tag $DB_IMAGE_NAME $HARBOR_REGISTRY/$HARBOR_REPOSITORY/$DB_IMAGE_NAME:$DB_HASH-$PIPELINE_HASH'
                                        sh 'docker push $HARBOR_REGISTRY/$HARBOR_REPOSITORY/$DB_IMAGE_NAME:$DB_HASH-$PIPELINE_HASH'
                                }
                        }
                }
	    }
        }
        stage('Test'){
            steps {
                echo "Testing stage"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deployment stage"
            }
        }
    }
    post {
        always {
            echo "Post actions"
		sh 'docker system prune -f'
		sh 'rm -rf .git ./*'
		sh 'docker rmi $HARBOR_REGISTRY/$HARBOR_REPOSITORY/$APP_IMAGE_NAME:$APP_HASH-$PIPELINE_HASH'
		sh 'docker rmi $APP_IMAGE_NAME-$APP_HASH:latest'
		sh 'docker rmi $HARBOR_REGISTRY/$HARBOR_REPOSITORY/$DB_IMAGE_NAME:$DB_HASH-$PIPELINE_HASH'
		sh 'docker rmi $DB_IMAGE_NAME-$DB_HASH:latest'
    }
}

